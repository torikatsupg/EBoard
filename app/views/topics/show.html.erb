<h1>Topics#show</h1>
<h2><%= @topic.title %></h2>
<%= form_for(@new_micropost) do |f| %>
<%= f.label :message, "メッセージ" %>
<%= f.text_field :message%>
<%= f.hidden_field :topic_id %>
<%= f.submit "メッセージを送信" %>
<% end %>

<ul>
  <% @microposts.each do |micropost| %>
  <li>
    <%= micropost.message %>
    <%= link_to "削除", micropost_path(micropost), method: :delete, data: { confirm: "コメントを削除しますか？"} %>
  </li>  
  <% end %>
</ul>