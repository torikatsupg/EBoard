<h1>Replies#new</h1>

<h2><%= @micropost.message %></h2>

<%= form_for(@new_reply) do |f|%>
<%= f.hidden_field :topic_id %>
<%= f.hidden_field :micropost_id %>
<%= f.text_field :reply %>
<%= f.submit "メッセージを送信" %>
<% end %>

<ul>
  <% @replies.each do |reply| %>
  <li>
  <%= reply.reply %>
  <%= link_to '削除', reply_path(reply),method: :delete, data: {confirm: "返信を削除しますか"} %>
  </li>
  <% end %>
</ul>